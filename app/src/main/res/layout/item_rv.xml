<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_marginTop="12px"
              android:layout_marginLeft="15px"
              android:layout_marginRight="15px"
              android:padding="10px"
              android:background="@color/info_bg_deep"
              android:gravity="center_vertical"
              android:layout_height="110px">

    <TextView
            android:id="@+id/evOrder"
            android:textSize="25px"
            android:text="3栋1单元"
            android:textColor="@android:color/white"
            android:layout_width="200px"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/helpPhone"
                android:textSize="25px"
                android:text="应急救援电话：--"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/regCode"
                android:layout_marginTop="7px"
                android:textSize="25px"
                android:textColor="@android:color/white"
                android:text="注册代码：--"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:minWidth="160px"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/nextAT"
                android:textSize="25px"
                android:textColor="@android:color/white"
                android:text="下一次年检时间：--"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/lastMT"
                android:layout_marginTop="7px"
                android:textSize="25px"
                android:text="上一次保养时间：--"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
